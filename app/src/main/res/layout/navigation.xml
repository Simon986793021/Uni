<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <AutoCompleteTextView 
       android:layout_height="50dp"
       android:layout_width="match_parent"
       android:id="@+id/tv__start"
       android:drawableLeft="@drawable/start"
       android:hint="请输入起始地"
	   android:gravity="center_vertical"
	   android:layout_gravity="center_vertical"
	   android:paddingTop="5dp"
	   android:textColor="#605a5a"
       android:background="@null"
       android:singleLine="true"
       />
   <View 
	    android:layout_height="0.5dp"
	    android:layout_marginTop="10dp"
	    android:background="#ccc"
	    android:layout_width="match_parent"/>
	<AutoCompleteTextView 
	    android:paddingTop="15dp"
	    android:layout_height="50dp"
	    android:layout_width="match_parent"
	    android:id="@+id/tv_end"
		android:textColor="#605a5a"
	    android:drawableLeft="@drawable/end"
	    android:singleLine="true"
	    android:hint="请输入目的地"
	    android:background="@null"/>
	<View 
	    android:layout_height="0.5dp"
		android:layout_marginTop="10dp"
	    android:background="#ccc"
	    android:layout_width="match_parent"/>
	<LinearLayout 
	    android:layout_height="30dp"
	    android:layout_width="match_parent"
	    android:orientation="horizontal"
	    android:layout_marginTop="10dp">
	    <ImageView 
	        android:layout_height="match_parent"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:id="@+id/iv_drive"
	        android:src="@drawable/route_drive_normal"/>
	     <ImageView 
	        android:layout_height="match_parent"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:id="@+id/iv_bus"
	        android:src="@drawable/route_bus_normal"/>
	      <ImageView 
	        android:layout_height="match_parent"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:id="@+id/iv_walk"
	        android:src="@drawable/route_walk_normal"/>
	</LinearLayout>
	<View 
	    android:layout_marginTop="10dp"
	    android:layout_height="0.5dp"
	    android:background="#ccc"
	    android:layout_width="match_parent"/>
	  <com.amap.api.maps2d.MapView
       android:layout_height="0dp"
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:id="@+id/map"
       />
	  <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:background="#fff"
        android:visibility="gone" >

        <TextView
            android:id="@+id/firstline"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/secondline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstline"
            android:layout_marginLeft="12dp"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="14sp" 
          />

        <LinearLayout
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" 
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="详情"
                android:textColor="#ff4500"
                android:textSize="16sp" />

            <Button
                android:layout_width="7dp"
                android:layout_height="13dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/arrow_right_blue"
                android:gravity="center_vertical" />
        </LinearLayout>
    </RelativeLayout>
    <ListView 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/lv_busresult"
        android:visibility="gone">
    </ListView>
</LinearLayout>
